<% include partials/header %>
<header class="jumbotron">
    <h1>Welcometo YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </p>
</header>

<div class="row">
    <% campgrounds.forEach((campground) => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 ">
        <figure class="figure">
          <img src="<%= campground.image %>" class="rounded img-fluid">
          <figcaption class="figure-caption text-right"><%= campground.name %></figcaption>
        </figure>
            
        </div>
        
        
    <% }); %>
</div>
<% include partials/footer %>
