<% include ../partials/header %>

<h1 class="text-center mt-5">Edit Comment</h1>

<div class="row d-flex justify-content-center mt-5">
    <div class="col-md-4 col-md-offset-4 ">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-outline-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>/">Go back</a>
    </div>
</div>

<% include ../partials/footer %>