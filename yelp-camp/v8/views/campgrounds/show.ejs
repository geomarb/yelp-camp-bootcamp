<% include ../partials/header %>

<div class="row">
        <div class="col-md-3">
                <p class="lead">Yelp Camp</p>
                <div class="list-group">
                     <li class="list-group-item active">Info 1</li>  
                     <li class="list-group-item">Info 2</li>  
                     <li class="list-group-item">Info 3</li>  
                </div>
        </div>
        <div class="col-md-9">
                <div class="card mb-2">
                  <img class="card-img-top rounded" src="<%= campground.image %>" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title">
                        <div class="row">
                                <div class="col-8"><p class="h5"><%= campground.name %></p></div>
                                <div class="col-4 text-right">$9.00/night</div>
                        </div>
                    </h5>
                    <p class="card-text"><%= campground.description %></p>
                  </div>
                </div>
                <div class="card bg-light mb-3">
                        <div class="card-header text-right">
                                <a class="btn btn-outline-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New comment</a>
                        </div>
                        <% campground.comments.forEach((comment) => { %>
                            <div class="card-body mt-0 py-1">
                                <h6 class="card-title mb-0">
                                        <%= comment.author.username %>
                                        <span class="float-right font-weight-light"><small class="text-muted">10 days ago</small></span>
                                </h6>
                                <p class="card-text font-weight-light font-italic mr-3">"<%= comment.text %>"</p>
                            </div>
                          <% }) %>
                </div>
        </div>
</div>
<% include ../partials/footer %>