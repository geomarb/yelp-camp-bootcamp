<% include ../partials/header %>

<h1 class="text-center mt-5">Add New Comment to <%= campground.name %></h1>

<div class="row d-flex justify-content-center mt-5">
    <div class="col-md-4 col-md-offset-4 ">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="comment" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn btn-outline-primary btn-block">Submint</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>/">Go back</a>
    </div>
</div>

<% include ../partials/footer %>